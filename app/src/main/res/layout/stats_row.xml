<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sport_row_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="vertical"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/sport_row_club_picture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/sport_row_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/sport_row_club_picture"
            android:layout_toRightOf="@+id/sport_row_club_picture"
            android:text="Sport "
            android:textColor="#1d75b4"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sport_row_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sport_row_name1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/sport_row_club_picture"
            android:layout_toRightOf="@+id/sport_row_club_picture"
            android:text="Type"
            android:textSize="15sp" />

        <TextView
            android:layout_marginTop="21dp"
            android:id="@+id/number_players"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="250dp"
            android:layout_toRightOf="@+id/sport_row_club_picture"
            android:layout_toEndOf="@id/sport_row_club_picture"
            android:hint="0"
            android:textColor="#1d75b4"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text1231"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="21dp"
            android:layout_toEndOf="@+id/sport_row_club_picture"
            android:layout_toRightOf="@+id/sport_row_club_picture"
            android:text="Total Athletes"
            android:textColor="#1d75b4"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/gend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_toEndOf="@+id/sport_row_club_picture"
            android:layout_toRightOf="@+id/sport_row_club_picture"
            android:text="TextView" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>

